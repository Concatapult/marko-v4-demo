<script>
    module.exports = {
        onInput(input) {
            this.state = {
                count: input.count
            }
            this.initialCount = input.count
        },
        incrementCount() {
            this.state.count++
        },
        resetCount() {
            this.state.count = this.initialCount
        }
    }
</script>

<div>${state.count}</div>
<button on-click('incrementCount')>+</button>
<button on-click('resetCount')>reset</button>